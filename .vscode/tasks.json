{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "make",
			"targetName": "all",
			"makeFileRelativePath": "build/Makefile",
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": "absolute"
			},
			"label": "make: all",
			"group": "build"
		},
		{
            "label": "run",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared", 
                "revealProblems": "onProblem"
            },
            "command": "ssh root@192.168.1.201 nohup gdbserver :2345 tr_arm3 ",
            "isBackground": true,       // Task muss im Background laufen
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ]
        }

	]
}